{
  "name": "extrahand-email-service",
  "version": "1.0.0",
  "description": "Email service for ExtraHand platform",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prod": "NODE_ENV=production node dist/server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop musterbook-email",
    "pm2:restart": "pm2 restart musterbook-email",
    "pm2:reload": "pm2 reload musterbook-email",
    "pm2:logs": "pm2 logs musterbook-email"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.478.0",
    "@sendgrid/mail": "^7.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.8.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.8",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
